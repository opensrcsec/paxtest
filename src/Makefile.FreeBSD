	${CC} ${LDFLAGS} -o ${.TARGET} ${.ALLSRC}

randfmap: randbody.o randfmap.o
	${CC} ${LDFLAGS} -o ${.TARGET} ${.ALLSRC}

randfmapbig: randbody.o randfmapbig.o
	${CC} ${LDFLAGS} -o ${.TARGET} ${.ALLSRC}

randarg1: randbody.o randarg1.o
	${CC} ${LDFLAGS} -o ${.TARGET} ${.ALLSRC}

randarg2: randbody.o randarg2.o
	${CC} ${LDFLAGS} -o ${.TARGET} ${.ALLSRC}

randheap1: randbody.o randheap1.o
	${CC} ${LDFLAGS} -o ${.TARGET} ${.ALLSRC}

